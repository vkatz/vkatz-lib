<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="font" format="string|reference"/>

    <declare-styleable name="AssetFontTextView">
        <attr name="font"/>
    </declare-styleable>

    <declare-styleable name="AssetFontEditText">
        <attr name="font"/>
    </declare-styleable>

    <declare-styleable name="AssetFontRadioButton">
        <attr name="font"/>
    </declare-styleable>

    <declare-styleable name="ColorFilteredImageView">
        <attr name="colorFilter" format="color|reference"/>
        <attr name="backgroundColorFilter" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="color" format="color|reference"/>
        <attr name="thickness" format="dimension|reference"/>
        <attr name="progress" format="integer"/>
        <attr name="flip" format="boolean|reference"/>
        <attr name="rotate" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="RoundRectLazyImage">
        <attr name="roundSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="SlideMenuLayout">
        <attr name="slideFrom" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="expanded" format="boolean|reference"/>
        <attr name="enabled" format="boolean|reference"/>
        <attr name="startScrollDistance" format="dimension|reference"/>
    </declare-styleable>
    <declare-styleable name="SlideMenuLayout_Layout">
        <attr name="isMenu" format="boolean|reference"/>
        <attr name="isMovable" format="boolean|reference"/>
        <attr name="isTouchable" format="boolean|reference"/>
    </declare-styleable>

</resources>