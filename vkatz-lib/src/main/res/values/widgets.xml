<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="font" format="string|reference"/>
    <attr name="compoundDrawableWidth" format="dimension|reference"/>
    <attr name="compoundDrawableHeight" format="dimension|reference"/>

    <declare-styleable name="ExtendCheckBox">
        <attr name="font"/>
        <attr name="compoundDrawableWidth"/>
        <attr name="compoundDrawableHeight"/>
    </declare-styleable>
    <declare-styleable name="ExtendEditText">
        <attr name="font"/>
        <attr name="compoundDrawableWidth"/>
        <attr name="compoundDrawableHeight"/>
    </declare-styleable>
    <declare-styleable name="ExtendRadioButton">
        <attr name="font"/>
        <attr name="compoundDrawableWidth"/>
        <attr name="compoundDrawableHeight"/>
    </declare-styleable>
    <declare-styleable name="ExtendTextView">
        <attr name="font"/>
        <attr name="compoundDrawableWidth"/>
        <attr name="compoundDrawableHeight"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="offsetHorizontal" format="dimension|reference"/>
        <attr name="offsetVertical" format="dimension|reference"/>
        <attr name="lineHeight" format="dimension|reference"/>
        <attr name="lineGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bot" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="spinner_color" format="color|reference"/>
        <attr name="spinner_thickness" format="dimension|reference"/>
        <attr name="progress" format="integer"/>
        <attr name="flip" format="boolean|reference"/>
        <attr name="rotate" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="ExtendRelativeLayout_Layout">
        <attr name="extendWidth" format="string|reference"/>
        <attr name="extendHeight" format="string|reference"/>
        <attr name="extendLeft" format="string|reference"/>
        <attr name="extendRight" format="string|reference"/>
        <attr name="extendTop" format="string|reference"/>
        <attr name="extendBottom" format="string|reference"/>
        <attr name="extendDx" format="dimension|reference"/>
        <attr name="extendDy" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="SlideMenuLayout">
        <attr name="slideFrom" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="scrollBehavior">
            <flag name="neverFinish" value="0"/>
            <flag name="alwaysFinish" value="1"/>
        </attr>
        <attr name="isExpanded" format="boolean|reference"/>
        <attr name="isMenuEnabled" format="boolean|reference"/>
        <attr name="startScrollDistance" format="dimension|reference"/>
    </declare-styleable>
    <declare-styleable name="SlideMenuLayout_Layout">
        <attr name="isMenu" format="boolean|reference"/>
        <attr name="isMovable" format="boolean|reference"/>
        <attr name="isTouchable" format="boolean|reference"/>
    </declare-styleable>
</resources>