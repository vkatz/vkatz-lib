<?xml version="1.0" encoding="utf-8"?>
<by.vkatz.widgets.ExtendRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">
    <View android:layout_width="2px"
          android:layout_height="match_parent"
          android:layout_centerInParent="true"
          android:background="#000"/>
    <View android:layout_width="match_parent"
          android:layout_height="2px"
          android:layout_centerInParent="true"
          android:background="#000"/>
    <View android:layout_width="500dp"
          android:layout_height="30dp"
          android:background="#ff0"/>
    <View android:id="@+id/id1"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#f00"
          app:extendHeight="25%"
          app:extendLeft="25%"
          app:extendTop="25%"
          app:extendWidth="25%"/>
    <View android:id="@+id/id2"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:background="#0f0"
          app:extendBottom="25%"
          app:extendHeight="25%"
          app:extendRight="25%"
          app:extendWidth="25%"/>
    <View android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignBottom="@id/id1"
          android:layout_alignLeft="@id/id1"
          android:layout_alignRight="@id/id1"
          android:layout_alignTop="@id/id1"
          android:layout_centerVertical="true"
          android:background="#00f"/>
    <View android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignBottom="@id/id2"
          android:layout_alignLeft="@id/id1"
          android:layout_alignRight="@id/id2"
          android:layout_alignTop="@id/id1"
          android:layout_centerVertical="true"
          android:background="#0ff"/>
    <View android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignBottom="@id/id2"
          android:layout_alignLeft="@id/id2"
          android:layout_alignRight="@id/id2"
          android:layout_alignTop="@id/id2"
          android:layout_centerVertical="true"
          android:background="#f0f"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#00f"
          app:extendHeight="10%h"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#001"
          app:extendHeight="10%h"
          app:extendTop="10%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#002"
          app:extendHeight="10%h"
          app:extendTop="20%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#003"
          app:extendHeight="10%h"
          app:extendTop="30%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#004"
          app:extendHeight="10%h"
          app:extendTop="40%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#005"
          app:extendHeight="10%h"
          app:extendTop="50%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#006"
          app:extendHeight="10%h"
          app:extendTop="60%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#007"
          app:extendHeight="10%h"
          app:extendTop="70%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#008"
          app:extendHeight="10%h"
          app:extendTop="80%"
          app:extendWidth="10%h"/>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="#009"
          app:extendHeight="10%h"
          app:extendTop="90%"
          app:extendWidth="10%h"/>
    <by.vkatz.widgets.ExtendRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#8f00"
        app:extendHeight="20%"
        app:extendLeft="10%"
        app:extendTop="10%"
        app:extendWidth="80%">
        <View android:id="@+id/id3"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:background="#377"
              app:extendHeight="50%h"
              app:extendLeft="80%"
              app:extendTop="25%"
              app:extendWidth="50%h"/>
    </by.vkatz.widgets.ExtendRelativeLayout>
    <View android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_below="@id/id3"
          android:layout_toLeftOf="@id/id3"
          android:background="#dc126d"
          app:extendHeight="10%h"
          app:extendWidth="10%h"/>
</by.vkatz.widgets.ExtendRelativeLayout>