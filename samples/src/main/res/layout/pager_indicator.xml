<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:background="#8000"/>
    <by.vkatz.katzext.widgets.ViewPagerIndicator
        android:id="@+id/pagerIndicator1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:background="#8000"/>
    <by.vkatz.katzext.widgets.ViewPagerIndicator
        android:id="@+id/pagerIndicator2"
        android:layout_width="match_parent"
        android:layout_height="36dp"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:background="#8000"/>
    <by.vkatz.katzext.widgets.ViewPagerIndicator
        android:id="@+id/pagerIndicator3"
        android:layout_width="match_parent"
        android:layout_height="36dp"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:background="#8000"/>
    <by.vkatz.katzext.widgets.ViewPagerIndicator
        android:id="@+id/pagerIndicator4"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:extendForceCenterMode="true"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:background="#8000"/>
    <by.vkatz.katzext.widgets.ViewPagerIndicator
        android:id="@+id/pagerIndicator5"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:extendForceCenterMode="true"/>
</LinearLayout>